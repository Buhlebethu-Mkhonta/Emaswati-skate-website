---
import ValueCard from "../components/ValueCard.svelte"
import TestimonialCard from "../components/TestimonialCard.svelte"
import ProgramCard from "../components/ProgramCard.svelte"
import InvolveCard from "../components/InvolveCard.svelte"
import Layout from '../layouts/Layout.astro'


// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---


<Layout>
	<!-- Hero Section -->
	<section class="hero min-h-[80vh] flex items-center justify-center text-center">
		<div class="hero-content w-full">
			<div class="max-w-4xl mx-auto">
				<div class="px-4 py-3">
					<h1 class="hero-title text-4xl md:text-6xl font-black tracking-tight leading-[0.95] uppercase text-white">
						Empowering Eswatini Youth
						<span class="block italic text-primary">Through Skateboarding</span>
					</h1>
					<p class="mt-4 text-lg md:text-2xl text-white/90 font-medium">
						A registered non-profit dedicated to breaking barriers, building confidence, and creating opportunities for youth in Eswatini through skateboarding, leadership, and community.
					</p>
				</div>
				<div class="mt-6">
					<a href="/about/" class="btn btn-primary btn-lg rounded-full shadow-lg">
						<i class="bx bx-skateboard text-2xl"></i>
						<span class="ml-2">Learn More About Us</span>
					</a>
				</div>
			</div>
		</div>
	</section>


	<!-- What We Do -->
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4">
			<h2 class="text-3xl font-bold text-center mb-12">What We Do</h2>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
				<ProgramCard icon="fa-solid fa-person-skating text-xl" title="Skate Lessons" description="Free lessons for all ages at Lafezeka Skate Park and in communities." />
				<ProgramCard icon="fa-solid fa-venus text-xl" title="Girls Skate & Empowerment" description="Girls-only sessions, lessons, and empowerment circles." />
				<ProgramCard icon="fa-solid fa-people-group text-xl" title="Community Outreach" description="Mobile skatepark, workshops, and events in underserved communities." />
			</div>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
				<ProgramCard icon="fa-solid fa-helmet-safety text-xl" title="Gear Access" description="Free-to-use skateboards and safety gear for all participants." />
				<ProgramCard icon="fa-solid fa-earth-africa text-xl" title="Leadership & Mentorship" description="Youth leadership, life skills, and positive role models." />
				<ProgramCard icon="fa-solid fa-universal-access text-xl" title="Inclusive Skating" description="Programs for girls, boys, and differently-abled youth." />
			</div>
		</div>
	</section>


	<!-- Impact Section -->
	<section class="py-20 bg-base-200">
		<div class="container mx-auto px-4">
			<h2 class="text-3xl font-bold text-center mb-12">Our Impact</h2>
			<div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
				<div>
					<h3 class="text-4xl font-bold text-primary">500+</h3>
					<p>Youth Reached</p>
				</div>
				<div>
					<h3 class="text-4xl font-bold text-primary">20+</h3>
					<p>Communities Served</p>
				</div>
				<div>
					<h3 class="text-4xl font-bold text-primary">100+</h3>
					<p>Skateboards Donated</p>
				</div>
				<div>
					<h3 class="text-4xl font-bold text-primary">50+</h3>
					<p>Events & Workshops</p>
				</div>
			</div>
			<div class="mt-8 text-center text-lg text-base-content/70">
				<p>
					We are building a movement—one board, one lesson, and one community at a time. Join us in rolling forward for Eswatini youth!
				</p>
			</div>
		</div>
	</section>

	<!-- Get Involved -->
	<section class="py-20 bg-base-20">
		<div class="container mx-auto px-4">
			<h2 class="text-3xl font-bold text-center mb-12">Get Involved</h2>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
				<InvolveCard icon="fa-solid fa-heart" title="Make a Donation" description="Your contribution funds lessons, safety gear, and safe spaces to skate." href="/support" cta="Donate" />
				<InvolveCard icon="fa-solid fa-hand-holding-heart" title="Volunteer" description="Help at sessions, support events, or join our outreach team." href="/connect" cta="Lend a Hand" />
				<InvolveCard icon="fa-solid fa-handshake" title="Partner With Us" description="Brands, schools, and organizations—let’s build a brighter future together." href="/connect" cta="Become a Partner" />
			</div>
		</div>
	</section>
	<!-- Impact Stories -->
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4">
			<h2 class="text-3xl font-bold text-center mb-12">Impact Stories</h2>
			<p class="text-lg text-center mb-8">Read inspiring stories of youth empowerment, community change, and the joy of skateboarding.</p>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
				<TestimonialCard 
					image="https://avatar.iran.liara.run/public/40"
					name="Sipho Dlamini"
					role="Youth Leader"
					testimonial="Skateboarding taught me confidence and gave me a place to belong. Now I help teach younger kids and see them grow too."
				/>
				<TestimonialCard 
					image="https://avatar.iran.liara.run/public/59"
					name="Nomcebo Mamba"
					role="Program Participant"
					testimonial="The girls-only sessions helped me find my voice and make new friends. I feel strong and supported every time I skate."
				/>
				<TestimonialCard 
					image="https://avatar.iran.liara.run/public/10"
					name="Thabo Simelane"
					role="Volunteer"
					testimonial="I never thought I could skate, but the coaches believed in me. Now I help at community events and feel proud of what we do."
				/>
			</div>
		</div>
	</section>
	
</Layout>

<style>
	.hero {
		background-image: url('/images/swazi-park-6-a4d0dc84.jpg');
		background-size: cover;
		background-position: center;
		position: relative;
	}
	.hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(rgba(0,0,0,0.58), rgba(0,0,0,0.58));
	}
	.hero-content {
		position: relative;
		z-index: 1;
		color: white;
	}
	.hero-title {
		text-shadow: 0 3px 8px rgba(0,0,0,0.35);
		letter-spacing: -0.02em;
	}
</style>
