---
import ValueCard from "../components/ValueCard.svelte"
import Partners from "../components/Patners.svelte"
import TestimonialCard from "../components/TestimonialCard.svelte"
import ProgramCard from "../components/ProgramCard.svelte"
import InvolveCard from "../components/InvolveCard.svelte"
import Layout from '../layouts/Layout.astro'

// Partner data
const partners = [
  {
    name: "European union",
    website: "https://european-union.europa.eu/index_en"
  },
  {
    name: "Good Push",
    website: "https://www.goodpush.org/"
  },
  {
    name: "Emlembe Water",
    website: "https://communityfirst.org"
  },
  {
	name: "Jenny Internet",
	website: "https://www.jenny.co.sz/"
  }]

---


<Layout>
	<!-- Hero Section -->
	<section class="hero min-h-[80vh] flex items-center justify-center text-center">
		<div class="hero-content w-full">
			<div class="max-w-4xl mx-auto">
				<div class="px-4 py-3">
					<h1 class="hero-title text-4xl md:text-6xl font-black tracking-tight leading-[0.95] uppercase text-white">
						Empowering Eswatini Youth
						<span class="block italic text-primary">Through Skateboarding</span>
					</h1>
					<p class="mt-4 text-lg md:text-2xl text-white/90 font-medium">
						A registered non-profit dedicated to breaking barriers, building confidence, and creating opportunities for youth in Eswatini through skateboarding, leadership, and community.
					</p>
				</div>
				<div class="mt-6">
					<a href="/about/" class="btn btn-primary btn-lg rounded-full shadow-lg">
						<span class="ml-2 text-white">Learn More About Us</span>
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Truck Donation Banner -->
	<section class="py-16 bg-base-100 border-t border-b border-base-300">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<div class="flex flex-col lg:flex-row items-center gap-8">
					<!-- Content -->
					<div class="flex-1 text-center lg:text-left">
						<div class="inline-flex items-center gap-2 bg-primary/10 text-primary rounded-full px-4 py-2 mb-4">
							<i class="fa-solid fa-truck text-2xl"></i>
							<span class="font-semibold">URGENT NEED</span>
						</div>
						<h2 class="text-3xl md:text-4xl font-bold mb-4 text-base-content">
							Help Us Get Our Mobile Skatepark Truck!
						</h2>
						<p class="text-lg md:text-xl text-base-content/80 mb-6 max-w-2xl">
							We need a reliable truck to transport our mobile skatepark, equipment, and gear to underserved communities across Eswatini. Your donation will help us reach more youth and expand our impact.
						</p>
						<div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
							<a href="/donate/" class="btn btn-primary btn-lg rounded-full shadow-lg hover:scale-105 transition-transform text-white">
								<i class="fa-solid fa-heart mr-2"></i>
								Donate Now
							</a>
						</div>
					</div>
					
					<!-- Visual Element -->
					<div class="flex-1 max-w-md">
						<div class="relative">
							<div class="bg-base-200 border border-base-300 rounded-2xl p-8 text-center">
								<i class="fa-solid fa-truck text-6xl text-primary mb-4"></i>
								<div class="space-y-2 text-sm">
									<div class="flex justify-between">
										<span class="text-base-content/70">Goal:</span>
										<span class="font-bold text-base-content">SZL 15,000</span>
									</div>
									<div class="flex justify-between">
										<span class="text-base-content/70">Raised:</span>
										<span class="font-bold text-primary">SZL 0</span>
									</div>
									<div class="w-full bg-base-300 rounded-full h-2 mt-4">
										<div class="bg-primary h-2 rounded-full" style="width: 0%"></div>
									</div>
									<p class="text-xs text-base-content/60 mt-2">0% of goal reached</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- What We Do -->
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4 sm:px-2">
			<div class="text-center mb-12">
				<h2 class="text-3xl font-bold">What We Do</h2>
				<p class="text-lg text-base-content/70 mt-2">Rolling forward with purpose and passion</p>
			</div>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
				<ProgramCard icon="fa-solid fa-person-skating" title="Skate Lessons" description="Free lessons for all ages at Lafezeka Skate Park and in communities." />
				<ProgramCard icon="fa-solid fa-venus" title="Girls Skate & Empowerment" description="Girls-only sessions, lessons, and empowerment circles." />
				<ProgramCard icon="fa-solid fa-people-group" title="Community Outreach" description="Mobile skatepark, workshops, and events in underserved communities." />
			</div>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-8">
				<ProgramCard icon="fa-solid fa-helmet-safety" title="Gear Access" description="Free-to-use skateboards and safety gear for all participants." />
				<ProgramCard icon="fa-solid fa-earth-africa" title="Leadership & Mentorship" description="Youth leadership, life skills, and positive role models." />
				<ProgramCard icon="fa-solid fa-universal-access" title="Inclusive Skating" description="Programs for girls, boys, and differently-abled youth." />
			</div>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-8">
				<ProgramCard icon="fa-solid fa-hammer" title="skatepark building" description="Building of skateparks and ramps together with Skateboard ramp rentals." />
			</div>
		</div>
	</section>


	<!-- Impact Section -->
	<section class="py-20 bg-base-200">
		<div class="container mx-auto px-4">
			<div class="text-center mb-12">
				<h2 class="text-3xl font-bold">Our Impact</h2>
				<p class="text-lg text-base-content/70 mt-2">Making waves, one trick at a time</p>
			</div>
			<div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
				<div>
					<h3 class="text-4xl font-bold text-primary">500+</h3>
					<p>Youth Reached</p>
				</div>
				<div>
					<h3 class="text-4xl font-bold text-primary">20+</h3>
					<p>Communities Served</p>
				</div>
				<div>
					<h3 class="text-4xl font-bold text-primary">100+</h3>
					<p>Skateboards Donated</p>
				</div>
				<div>
					<h3 class="text-4xl font-bold text-primary">50+</h3>
					<p>Events & Workshops</p>
				</div>
			</div>
			<div class="mt-8 text-center text-lg text-base-content/70">
				<p>
					We are building a movement—one board, one lesson, and one community at a time. Join us in rolling forward for Eswatini youth!
				</p>
			</div>
		</div>
	</section>

	<!-- Get Involved -->
	<section class="py-20 bg-base-20">
		<div class="container mx-auto px-4">
			<div class="text-center mb-12">
				<h2 class="text-3xl font-bold">Get Involved</h2>
				<p class="text-lg text-base-content/70 mt-2">Join the movement and make a difference</p>
			</div>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
				<InvolveCard icon="fa-solid fa-heart" title="Make a Donation" description="Your contribution funds lessons, safety gear, and safe spaces to skate." href="/donate/" cta="Donate" />
				<InvolveCard icon="fa-solid fa-hand-holding-heart" title="Volunteer" description="Help at sessions, support events, or join our outreach team." href="/contact" cta="Lend a Hand" />
				<InvolveCard icon="fa-solid fa-handshake" title="Partner With Us" description="Brands, schools, and organizations—let’s build a brighter future together." href="/contact" cta="Become a Partner" />
			</div>
		</div>
	</section>
	
	<!-- Impact Stories -->
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4">
			<div class="text-center mb-12">
				<h2 class="text-3xl font-bold">Impact Stories</h2>
				<p class="text-lg text-base-content/70 mt-2">Read inspiring stories of youth empowerment, community change, and the joy of skateboarding.</p>
			</div>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
				<TestimonialCard 
					image="https://avatar.iran.liara.run/public/40"
					name="Sipho Dlamini"
					role="Youth Leader"
					testimonial="Skateboarding taught me confidence and gave me a place to belong. Now I help teach younger kids and see them grow too."
				/>
				<TestimonialCard 
					image="https://avatar.iran.liara.run/public/59"
					name="Nomcebo Mamba"
					role="Program Participant"
					testimonial="The girls-only sessions helped me find my voice and make new friends. I feel strong and supported every time I skate."
				/>
				<TestimonialCard 
					image="https://avatar.iran.liara.run/public/10"
					name="Thabo Simelane"
					role="Volunteer"
					testimonial="I never thought I could skate, but the coaches believed in me. Now I help at community events and feel proud of what we do."
				/>
			</div>
		</div>
	</section>

<!-- Partner Section with Infinite Scroll -->
	<section class="overflow-hidden">
		<Partners
    		client:load
    		title="Our Partners"
    		subtitle="Proudly supported by organizations that believe in empowering Eswatini youth through skateboarding"
    		{partners}
    		speed1={30}
    		speed2={35}
    		showTwoRows={false}
    		backgroundColor="bg-base/60"
  	/>
	</section>
	
</Layout>

<style>
	.hero {
		background-image: url('/images/swazi-park-6-a4d0dc84.jpg');
		background-size: cover;
		background-position: center;
		position: relative;
	}
	.hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(rgba(0,0,0,0.58), rgba(0,0,0,0.58));
	}
	.hero-content {
		position: relative;
		z-index: 1;
		color: white;
	}
	.hero-title {
		text-shadow: 0 3px 8px rgba(0,0,0,0.35);
		letter-spacing: -0.02em;
	}


</style>
