---
import Layout from '../layouts/Layout.astro'
---

<Layout title="Donate - Emaswati Skate">
	<!-- Hero Section -->
	<section class="py-20 bg-gradient-to-r from-primary to-secondary text-white">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto text-center">
				<h1 class="text-4xl md:text-6xl font-bold mb-6">
					Support Our Mission
				</h1>
				<p class="text-xl md:text-2xl text-white/90 mb-8">
					Help us empower Eswatini youth through skateboarding. Choose how you'd like to make a difference.
				</p>
			</div>
		</div>
	</section>

	<!-- Initiatives Only -->
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<h2 class="text-3xl font-bold text-center mb-12">Our Initiatives</h2>
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div class="bg-base-100 border border-base-300 rounded-2xl p-8 text-center">
						<div class="inline-flex items-center justify-center w-16 h-16 bg-primary text-white rounded-full mb-4">
							<i class="fa-solid fa-truck text-2xl"></i>
						</div>
						<h3 class="text-xl font-bold mb-2">Mobile Skatepark Truck</h3>
						<p class="text-base-content/70">Help us reach more communities with our mobile skatepark.</p>
					</div>
					<div class="bg-base-100 border border-base-300 rounded-2xl p-8 text-center">
						<div class="inline-flex items-center justify-center w-16 h-16 bg-secondary text-white rounded-full mb-4">
							<i class="fa-solid fa-person-skating text-2xl"></i>
						</div>
						<h3 class="text-xl font-bold mb-2">Skateboard Outreach</h3>
						<p class="text-base-content/70">Support community programs and free lessons for all ages.</p>
					</div>
					<div class="bg-base-100 border border-base-300 rounded-2xl p-8 text-center">
						<div class="inline-flex items-center justify-center w-16 h-16 bg-accent text-white rounded-full mb-4">
							<i class="fa-solid fa-helmet-safety text-2xl"></i>
						</div>
						<h3 class="text-xl font-bold mb-2">Skateboard Supplies</h3>
						<p class="text-base-content/70">Provide boards, safety gear, and equipment for youth.</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Donate Now: Payment Options -->
	<section class="py-16 bg-base-100 border-t border-b border-base-300">
		<div class="container mx-auto px-4">
			<div class="max-w-3xl mx-auto text-center">
				<h2 class="text-2xl font-bold mb-4">Donate Now</h2>
				<p class="text-base-content/70 mb-6">Choose a convenient way to support our work.</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a href="#" class="btn btn-primary rounded-full text-white">
						<i class="fa-brands fa-paypal mr-2"></i>
						Donate with PayPal
					</a>
                    <!-- Open the modal using ID.showModal() method -->
                    <button class="btn btn-outline rounded-full" onclick="my_modal_5.showModal()">
						<i class="fa-solid fa-mobile-screen-button mr-2"></i>
						Donate with MTN MoMo
					</button>
                    <dialog id="my_modal_5" class="modal modal-bottom sm:modal-middle">
                    <div class="modal-box">
                        <h3 class="text-xl font-bold">Donate with MTN MoMo</h3>
                        <p class="text-sm text-base-content/70">Emaswati Skate • Registered NGO</p>
                        <div class="divider my-3"></div>

                        <div class="mb-3">
                            <p class="text-sm mb-1 font-semibold">Merchant / Number</p>
                            <p class="kbd kbd-sm">[MoMo Business Number]</p>
                            <p class="text-xs text-base-content/60 mt-1">Use this as the recipient when sending your donation.</p>
                        </div>

                        <div class="bg-base-200 rounded-xl p-3 mb-4">
                            <p class="font-semibold text-sm mb-2">Quick steps</p>
                            <ol class="list-decimal pl-5 space-y-1 text-sm">
                                <li>Open MyMTN app or dial <span class="kbd kbd-xs">*165#</span>.</li>
                                <li>Select <span class="font-medium">Send Money</span> or <span class="font-medium">Pay Merchant</span>.</li>
                                <li>Enter recipient: <span class="font-semibold">[MoMo Business Number]</span>.</li>
                                <li>Enter amount and confirm with your MoMo PIN.</li>
                            </ol>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-3 mb-4">
                            <div class="border border-base-300 rounded-lg p-3">
                                <p class="font-semibold text-sm mb-1">Via App</p>
                                <ul class="list-disc pl-5 text-sm space-y-1">
                                    <li>Payments → Send Money</li>
                                    <li>Enter details → Confirm</li>
                                </ul>
                            </div>
                            <div class="border border-base-300 rounded-lg p-3">
                                <p class="font-semibold text-sm mb-1">Via USSD</p>
                                <ul class="list-disc pl-5 text-sm space-y-1">
                                    <li>Dial <span class="kbd kbd-xs">*165#</span></li>
                                    <li>Select Send Money → Enter details</li>
                                </ul>
                            </div>
                        </div>

                        <div class="mb-4">
                            <p class="text-sm font-semibold">Payment reference</p>
                            <p class="text-sm">Use: <span class="font-medium">Donation - Your Name</span></p>
                        </div>

                        <div class="alert bg-base-200 border border-base-300 text-sm mb-2">
                            <span>After payment, optionally email proof to
                                <a href="mailto:info@emaswatiskate.org" class="link text-primary">info@emaswatiskate.org</a>.
                            </span>
                        </div>
                        <p class="text-xs text-base-content/60">Fees may apply per MTN policy. Your full contribution supports our skate programs.</p>

                        <div class="modal-action">
                            <form method="dialog">
                                <button class="btn">Close</button>
                            </form>
                        </div>
                    </div>
                    </dialog>
					
				</div>
			</div>
		</div>
	</section>

	<!-- Bank Transfer Details -->
	<section class="py-16 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-3xl mx-auto">
				<h2 class="text-2xl font-bold mb-4 text-center">Prefer Bank Transfer?</h2>
				<div class="bg-base-100 border border-base-300 rounded-2xl p-6">
					<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
						<div>
							<p class="text-sm text-base-content/60">Account Name</p>
							<p class="font-semibold">Emaswati Skate</p>
						</div>
						<div>
							<p class="text-sm text-base-content/60">Bank</p>
							<p class="font-semibold">[Your Bank Name]</p>
						</div>
						<div>
							<p class="text-sm text-base-content/60">Account Number</p>
							<p class="font-semibold">[Your Account Number]</p>
						</div>
						<div>
							<p class="text-sm text-base-content/60">Branch Code</p>
							<p class="font-semibold">[Branch Code]</p>
						</div>
						<div>
							<p class="text-sm text-base-content/60">SWIFT/BIC</p>
							<p class="font-semibold">[SWIFT/BIC]</p>
						</div>
						<div>
							<p class="text-sm text-base-content/60">Reference</p>
							<p class="font-semibold">Donation - Your Name</p>
						</div>
					</div>
					<p class="text-sm text-base-content/70 mt-4">After transfer, please email proof to <a href="mailto:info@emaswatiskate.org" class="link link-hover text-primary">info@emaswatiskate.org</a>.</p>
				</div>
			</div>
		</div>
	</section>
</Layout>


