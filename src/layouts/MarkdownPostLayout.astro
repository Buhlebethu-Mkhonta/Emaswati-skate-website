---
const { frontmatter } = Astro.props;
import Layout from "./Layout.astro";

---
<Layout title={frontmatter.title}>
    <section class="container mx-auto px-4 py-12">
        <article class="max-w-3xl mx-auto bg-base-100 rounded-lg shadow p-6">
            <h1 class="text-3xl font-bold mb-4">{frontmatter.title}</h1>
            <p class="text-sm text-base-content/70 mb-2">Written by {frontmatter.author}</p>
            <div class="prose prose-neutral" set:html={frontmatter.content} />
        </article>
        <slot />
    </section>

</Layout>